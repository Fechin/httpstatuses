extends layout.jade

block title
  title !{code} !{title} &mdash; httpstatuses.com

block contents
  .code
    article.container.code: .row: .twelve.columns
      h2 !{groups.codes[set].title}
      h1 #[span !{code}] !{title}
      != contents
      if references
        h1.section #[span !{code}] Code References
        each value, key in references
          p !{key} #[code !{value}]
      a(href='/') &larr; Return to httpstatuses.com